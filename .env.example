# =============================================================================
# MAVV Demobot 2.9 — Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
#   cp .env.example .env

# -----------------------------------------------------------------------------
# Discord Bot Settings (REQUIRED)
# -----------------------------------------------------------------------------
# Your bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# Your Discord server (guild) ID — right-click server name → Copy Server ID
DISCORD_GUILD_ID=000000000000000000

# The channel ID where votes and results will be posted
VOTE_CHANNEL_ID=000000000000000000

# Comma-separated Discord user IDs of bot admins
# Right-click your name → Copy User ID
ADMIN_USER_IDS=000000000000000000,000000000000000000

# -----------------------------------------------------------------------------
# Schedule Settings (all times in the configured timezone)
# -----------------------------------------------------------------------------
# Day and time when voting opens each week
VOTE_OPEN_DAY=tuesday
VOTE_OPEN_TIME=09:00

# Day and time when results are published
RESULTS_DAY=friday
RESULTS_TIME=09:00

# Day and time for automatic reminder DMs to non-voters
REMINDER_DAY=thursday
REMINDER_TIME=18:00

# Attendance change cutoff (same as results by default)
ATTENDANCE_CUTOFF_DAY=friday
ATTENDANCE_CUTOFF_TIME=09:00

# -----------------------------------------------------------------------------
# Timezone
# -----------------------------------------------------------------------------
# IANA timezone for all schedule times
# See: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TIMEZONE=America/Los_Angeles

# -----------------------------------------------------------------------------
# Runoff Settings
# -----------------------------------------------------------------------------
# How long the runoff vote lasts (in minutes)
RUNOFF_DURATION_MINUTES=120

# -----------------------------------------------------------------------------
# Game Ballot Settings
# -----------------------------------------------------------------------------
# Max nominations per person per week
MAX_NOMINATIONS_PER_PERSON=1

# Max total games on the ballot (carry-overs + nominations)
MAX_TOTAL_GAMES=10

# Number of top games that carry over to the next week
CARRY_OVER_COUNT=5
